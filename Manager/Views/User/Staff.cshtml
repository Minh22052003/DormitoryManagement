@model IEnumerable<Manager.Models.Staff>
@{
    var i=1;

}
<div class="container-fluid position-relative d-flex p-0">
    <!-- Content Start -->
    <div class="col m-5">
        <div class="row">
            <div class="col-6">
                <div class="card border-0">
                    <div class="bg-light rounded p-4 mb-3" style="height: 150px; overflow-y: auto;">
                        <h6 class="mb-4">Tìm kiếm</h6>
                        <form class="d-none d-md-flex ms-4">
                            <div class="col-4"><input class="form-control bg-white border-0 mt-2 me-3" type="search" placeholder="Search"></div>
                            <button type="button" class="btn btn-secondary m-2">Tìm theo MNV</button>
                            <button type="button" class="btn btn-secondary m-2">Tìm theo tên</button>
                            <button type="button" class="btn btn-secondary m-2">Tìm theo chức vụ</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card border-0">
                    <div class="bg-light rounded p-4 mb-3" style="height: 150px; overflow-y: auto;">
                        <h6 class="mb-4">Sắp xếp</h6>
                        <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                            <option selected>Sắp xếp tên theo thứ tự từ A đến Z</option>
                            <option value="1">Sắp xếp tên theo thứ tự từ Z đến A</option>
                            <option value="2">Sắp xếp MNV theo thứ tự tăng dần</option>
                            <option value="3">Sắp xếp MNV theo thứ tự giảm dần</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card border-0">
                <div class="bg-light rounded h-100 p-4">
                    <h4 class="m-2">Danh sách nhân viên</h4>
                    <table class="table table-striped">
                        <thead class="fw-bold">
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Mã nhân viên</th>
                                <th scope="col">Họ và tên</th>
                                <th scope="col">Chức vụ</th>
                                <th scope="col">Số điện thoại</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var s in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <a asp-action="StaffDetail" asp-controller="User" asp-route-id="@s.StaffID">
                                            @s.StaffID
                                        </a>
                                    </td>
                                    <td>@s.FullName</td>
                                    <td>@s.RoleName</td>
                                    <td>@s.PhoneNumber</td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Content End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>