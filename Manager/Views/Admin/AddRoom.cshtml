<div class="container mt-4">
    <form asp-action="AddRoom" asp-controller= "Admin" method="post">
        <!-- Room Name -->
        <div class="mb-3">
            <label for="RoomName" class="form-label">Tên phòng</label>
            <input type="text" class="form-control" id="RoomName" name="RoomName" required>
        </div>

        <!-- Building Selection -->
        <div class="mb-3">
            <label for="BuildingID" class="form-label">Tòa nhà</label>
            <select class="form-select" id="BuildingID" name="BuildingID" required>
                <option value="">Chọn tòa nhà</option>
                @foreach (var building in ViewBag.Buildings)

                {
                    <option value="@building.BuildingID">
                        @building.BuildingName
                    </option>
                }
            </select>
        </div>

        <!-- Room Type Selection -->
        <div class="mb-3">
            <label for="RoomTypeID" class="form-label">Loại phòng</label>
            <select class="form-select" id="RoomTypeID" name="RoomTypeID" required>
                <option value="">Chọn loại phòng</option>
                @foreach (var roomType in ViewBag.RoomTypes)

                {
                    <option value="@roomType.RoomTypeID">
                        @roomType.RoomTypeName
                    </option>
                }
            </select>
        </div>

        <!-- Room Status Selection -->
        <div class="mb-3">
            <label for="RoomStatusID" class="form-label">Trạng thái phòng</label>
            <select class="form-select" id="RoomStatusID" name="RoomStatusID" required>
                <option value="">Chọn trạng thái phòng</option>
                @foreach (var status in ViewBag.RoomStatuses)

                {
                    <option value="@status.RoomStatusID">
                        @status.RoomStatusName
                    </option>
                }
            </select>
        </div>

        <!-- Room Note -->
        <div class="mb-3">
            <label for="RoomNote" class="form-label">Ghi chú phòng</label>
            <textarea class="form-control" id="RoomNote" name="RoomNote"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
