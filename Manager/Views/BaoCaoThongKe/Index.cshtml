<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>Quản Lý Ký Túc Xá - Bảng Điều Khiển</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Date Pickers and Buttons Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <!-- Start Date -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded p-2">
                    <label for="start-date" class="form-label">Ngày Bắt Đầu</label>
                    <div class="relative-container" style="position: relative;">
                        <input type="text" class="form-control datetimepicker-input" id="start-date" data-toggle="datetimepicker" data-target="#start-date" />
                    </div>
                </div>
            </div>
            <!-- End Date -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded p-2">
                    <label for="end-date" class="form-label">Ngày Kết Thúc</label>
                    <div class="relative-container" style="position: relative;">
                        <input type="text" class="form-control datetimepicker-input" id="end-date" data-toggle="datetimepicker" data-target="#end-date" />
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-4"></div>
            <!-- Buttons -->
            <div class="col-sm-6 col-xl-4 d-flex align-items-center justify-content-end">
                <button class="btn btn-primary me-2" id="preview-button">
                    <i class="fa fa-eye"></i> Xem Trước
                </button>
                <button class="btn btn-success" id="download-button">
                    <i class="fa fa-download"></i> Tải Xuống
                </button>
            </div>
        </div>
    </div>
    <!-- Date Pickers and Buttons End -->
    <!-- Content Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <!-- New Students -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-user-plus fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Sinh Viên Mới</p>
                    </div>
                    <div>
                        <h6 class="mb-0" id="new-students"></h6>
                    </div>
                </div>
            </div>
            <!-- Current Students -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-users fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Sinh Viên Hiện Tại</p>
                    </div>
                    <div>
                        <h6 class="mb-0" id="total-residents"></h6>
                    </div>
                </div>
            </div>
            <!-- Student Requests -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-comments fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Yêu Cầu Sinh Viên</p>
                    </div>
                    <div>
                        <h6 class="mb-0" id="student-requests"></h6>
                    </div>
                </div>
            </div>
            <!-- Processed Requests -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-tools fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Yêu Cầu Đã Xử Lý</p>
                    </div>
                    <div>
                        <h6 class="mb-0" id="processed-requests"></h6>
                    </div>
                </div>
            </div>
            <!-- Total Revenue -->
            <div class="col-sm-6 col-xl-2">
                <div class="rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-money-bill-wave fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Tổng Doanh Thu</p>
                    </div>
                    <div>
                        <h6 class="mb-0" id="total-revenue"></h6>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Content End -->
    <!-- Statistics Chart Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="text-center rounded p-4">
            <h3 class="mb-4">Thống Kê Quản Lý Ký Túc Xá</h3>
            <div class="row">
                <!-- Room Occupancy Chart -->
                <div class="col-md-6 mb-4">
                    <h5 class="mb-3">Sinh viên</h5>
                    <canvas id="room-occupancy" style="max-height: 300px;"></canvas>
                </div>
                <!-- Report Chart -->
                <div class="col-md-6 mb-4">
                    <h5 class="mb-3">Yêu Cầu</h5>
                    <canvas id="reports-chart" style="max-height: 300px;"></canvas>
                </div>
                <!-- Revenue Chart -->
                <div class="col-md-12">
                    <h5 class="mb-3">Doanh Thu</h5>
                    <canvas id="revenue-chart" style="max-height: 600px;"></canvas>
                </div>
            </div>
        </div>
    </div>
    <!-- Statistics Chart End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart/chart.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/chart.js"></script>
</body>

</html>
