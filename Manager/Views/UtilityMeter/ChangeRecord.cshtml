@model Manager.Models.UtilityMeter

@{
    ViewData["Title"] = "Chỉnh sửa bản ghi";
}

<div class="container-fluid position-relative d-flex p-0">
    <div class="col m-5">
        <div class="card bg-light rounded h-100 p-4">
            <form asp-action="UpdateStaff" asp-controller="User" method="post">
                <div class="row g-5">
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Mã bản ghi</label>
                            <input class="form-control" name="UtilityMeterID" value="@Model.UtilityMeterID" readonly>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Tòa nhà</label>
                            <input class="form-control" name="BuildingName" value="@Model.BuildingName" readonly>
                        </div>
                    </div>

                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Phòng</label>
                            <input class="form-control" name="RoomName" value="@Model.RoomName" readonly>
                        </div>
                    </div>
                </div>
                <div class="row g-5">
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Người ghi</label>
                            <input class="form-control" name="StaffName" value="@Model.StaffName" readonly>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Ngày ghi</label>
                            <input class="form-control" name="RecordingDate" value="@Model.RecordingDate?.ToString("yyyy-MM-dd")" readonly>
                        </div>
                    </div>
                </div>
                <div class="row g-5">
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Số điện sử dụng</label>
                            <input type="date" name="Electricity" class="form-control" id="dateInput" value="@Model.Electricity">
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-4">
                        <div class="form-item">
                            <label class="form-label my-3 fw-bold">Số nước sử dụng</label>
                            <input name="Water" class="form-control" value="@Model.Water">
                        </div>
                    </div>
                </div>
                <div class="row m-5">
                    <div class="col-4"></div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-success m-2 w-75">Cập nhật</button>
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-primary m-2 w-75">Trở về</button>
                    </div>
                    <div class="col-4"></div>
                </div>
            </form>
        </div>
    </div>
</div>