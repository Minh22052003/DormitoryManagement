@{
    Layout = "~/Views/Shared/IntroLayout.cshtml";
}

@model List<DormitoryUser.Models.News>
<style>
    .card-text img {
        max-width: 100px;  /* Giới hạn chiều rộng ảnh */
        height: auto;     /* Tự động điều chỉnh chiều cao */
        display: block;   /* Đảm bảo ảnh là phần tử block */
        margin: 10px 0;    /* Thêm khoảng cách trên và dưới ảnh */
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-lg-12 col-xl-9">
            <div class="card mb-4" style="border: none;">
                <div class="card-header" style="border: none;">
                    <h4>Chi tiết thông báo</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model[6].Title</h5>
                    <p class="card-text">@Html.Raw(Model[6].Content)</p>
                    <p class="text-muted">Ngày đăng: @Model[6].CreationDate</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-12 col-xl-3">
            <div class="card" id="news">
                <div class="card-header">
                    <h4>Tin tức</h4>
                </div>
                <div class="card-body">
                    @foreach (var news in Model)
                    {
                        <div class="media mb-3">
                            <div class="media-body">
                                <h6 class="mt-0">@news.Title</h6>
                                <p>@news.CreationDate</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
