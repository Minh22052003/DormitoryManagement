@{
    Layout = "~/Views/Shared/IntroLayout.cshtml";
}

@model List<DormitoryUser.Models.News>

@{
    var selectedNews = ViewBag.SelectedNews as DormitoryUser.Models.News;
}
<style>
    .card-text img {
        max-width: 100px; /* Giới hạn chiều rộng ảnh */
        height: auto; /* Tự động điều chỉnh chiều cao */
        display: block; /* Đảm bảo ảnh là phần tử block */
        margin: 10px 0; /* Thêm khoảng cách trên và dưới ảnh */
    }
</style>

<div class="container" style="margin: 150px;">
    <div class="row">
        <div class="col-12 col-lg-12 col-xl-9">
            <div class="card mb-4" style="border: none;">
                <div class="card-body">
                    @if (selectedNews != null)

                    {
                        <div class="card mb-4" style="border: none;">
                            <div class="card-header" style="border: none;">
                                <h4>Chi tiết thông báo</h4>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@selectedNews.Title</h5>
                                <p class="card-text">@Html.Raw(selectedNews.Content)</p>
                                <p class="text-muted">Ngày đăng: @selectedNews.CreationDate</p>
                            </div>
                        </div>
                    }

                    else

                    {
                        <p>Không có thông báo nào được chọn.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-12 col-xl-3">
            <div class="card" id="news">
                <div class="card-header">
                    <h4>Tin tức</h4>
                </div>
                <div class="card-body">
                    @foreach (var news in Model)

                    {
                        <div class="media mb-3">
                            <div class="media-body">
                                <h6 class="mt-0">
                                    <a asp-controller="News" asp-action="Index" asp-route-id="@news.NewsID">
                                        @news.Title
                                    </a>
                                </h6>
                                <p>@news.CreationDate</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>