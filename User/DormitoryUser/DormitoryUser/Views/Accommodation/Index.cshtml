@model List<DormitoryUser.Models.Accommodation>

@{
    Layout = "~/Views/Shared/IntroLayout.cshtml";
}

<div class="container" style="margin-top: 150px;">
    <h1 class="mb-4">Phòng ở tại Ký túc xá</h1>
    <p>Ký túc xá cung cấp nhiều loại phòng ở phù hợp với nhu cầu của sinh viên.</p>

    <!-- Danh sách loại phòng -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/img/KTX-10.jpg" class="card-img-top" alt="Phong don">
                <div class="card-body">
                    <h5 class="card-title">Phòng đôi</h5>
                    <p class="card-text">Phòng đôi dành cho hai người, được trang bị giường, bàn học và tủ cá nhân.</p>
                    <p class="card-text"><strong>Giá: 500,000 VNĐ/tháng</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/img/KTX-8.jpg" class="card-img-top" alt="Phong don">
                <div class="card-body">
                    <h5 class="card-title">Phòng bốn người</h5>
                    <p class="card-text">Phòng đôi dành cho bốn người, được trang bị giường, bàn học và tủ cá nhân.</p>
                    <p class="card-text"><strong>Giá: 300,000 VNĐ/tháng</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/img/DSC_6126-1024x684.jpg" class="card-img-top" alt="Phong don">
                <div class="card-body">
                    <h5 class="card-title">Phòng sáu người</h5>
                    <p class="card-text">Phòng đôi dành cho sáu người, được trang bị giường, bàn học và tủ cá nhân.</p>
                    <p class="card-text"><strong>Giá: 200,000 VNĐ/tháng</strong></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Khuôn viên ký túc xá -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Khuôn viên Ký túc xá</h3>
            <p>@Model.FirstOrDefault()?.CampusDescription</p>
        </div>
    </div>

    <!-- Hình ảnh khuôn viên -->
    <div class="row mt-3">
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/img/111.jpg" class="card-img-top" alt="Hình ảnh khuôn viên" style="height: 350px;">
                <div class="card-body">
                    <h5 class="card-title">Hình ảnh khuôn viên</h5>
                    <p class="card-text">Khuôn viên xanh mát, lý tưởng cho các hoạt động ngoài trời.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/img/KTX20p2.jpg" class="card-img-top" alt="Hình ảnh khuôn viên" style="height: 350px;">
                <div class="card-body">
                    <h5 class="card-title">Hình ảnh khuôn viên</h5>
                    <p class="card-text">Khuôn viên xanh mát, lý tưởng cho các hoạt động ngoài trời.</p>
                </div>
            </div>
        </div>
    </div>
</div>
